.main_container {
  height: 100%;
  width: 100%;
  margin: 0px;
  padding: 0px;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
} 
/*首页跑马灯效果*/
@keyframes around {
  from {
   margin-left: 100%;
  }
  to {
   /* var接受传入的变量 */
   margin-left: var(--marqueeWidth--);
  }
  }
.img_box{
  width: 100%;
  height: 20%;
  position: relative;
  display: block;
  background: #4cfe46;
}
.u-wrp-bnr {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
  object-fit:fill;
}
.u-img-slide {
  width: 100%;
  height: 100%;
  display: block;
}
.marquee_container{
  background-color: #cac7c8;
  height: 4%;
  width: 100%;
 }
 .marquee_container:hover{
  /* 不起作用 */
  animation-play-state: paused;
 }
 .marquee_view{
  display: inline-block;
  white-space: nowrap;
  animation-name: around;
  animation-duration: 10s; /*过渡时间*/
  animation-iteration-count: infinite;
  animation-timing-function:linear;
  height: 100%;
 }
 .marquee_text{
  color:#ffffff;
  margin-top: 25%;
  margin-bottom: 25%;
 }
