 <view class="page-section">
    <view class="weui-cells__title">旧密码</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" password type="text" placeholder="请输入" bindinput="oldPasswordInput" />
      </view>
    </view>
  </view>
   <view class="page-section">
    <view class="weui-cells__title">新密码</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" password type="text" placeholder="请输入"  bindinput="newPassword1Input"/>
      </view>
    </view>
  </view>
     <view class="page-section">
    <view class="weui-cells__title">确认新密码</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" password type="text" placeholder="请输入"  bindinput="newPassword2Input"/>
      </view>
    </view>
  </view>

   <button type="warn" bindtap='changePassword'>修改密码</button>